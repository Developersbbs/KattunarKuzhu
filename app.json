{
  "expo": {
    "name": "Kattunar-Kuzhu",
    "slug": "Kattunar-Kuzhu",
    "version": "0.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kattunarkuzhu",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D1248"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kattunarkuzhu.app",
      "buildNumber": "0.0.1",
      "infoPlist": {
        "UIBackgroundModes": [
          "fetch"
        ],
        "NSCameraUsageDescription": "This app uses the camera to enable profile photo uploads.",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to enable profile photo uploads.",
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby community events."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2D1248"
      },
      "package": "com.kattunarkuzhu.app",
      "versionCode": 1,
      "minSdkVersion": 24,
      "compileSdkVersion": 35,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "themeColor": "#2D1248"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2D1248"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/SpaceMono-Regular.ttf"
          ]
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "API_BASE_URL": "http://192.168.43.108:3000",
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "kattunarkuzhu",
    "privacy": "unlisted",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-eas-project-id",
      "fallbackToCacheTimeout": 0,
      "enabled": true
    }
  }
}
